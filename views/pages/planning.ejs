<!-- START STYLES -->
<link rel="stylesheet" href="/CSS/PAGES/planning.css">
<!-- END STYLES -->


<!-- START CONTENT -->
<div class="calendar-page">
    <!-- ! START HEADER -->
    <div class="calendar-header">
        <div class="header-content">
            <div class="title-section">
                <div class="title-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div>
                    <h1 class="page-title">Planning</h1>
                    <p class="page-subtitle">Consultez votre planning et gérez vos événements</p>
                </div>
            </div>
        </div>
    </div>
    <!-- ! END HEADER -->

    <!-- ! START CALENDAR -->
    <div class="calendar-container">
        <div class="calendar-toolbar">
            <div class="toolbar-left">
                <% if (user.role === 1) { %>
                <button id="addEventBtn" class="calendar-btn">
                    <i class="fas fa-plus"></i>Ajouter un événement
                </button>
                <% } %>
                <button class="calendar-btn secondary">
                    <i class="fas fa-calendar-day"></i> Aujourd'hui
                </button>
            </div>
        </div>

        <div id="calendar"></div>
    </div>
    <!-- ! END CALENDAR -->
</div>
<!--  END CONTENT -->

<!-- START MODAL -->
<div id="eventModal" class="modal">
    <div class="modal-content">
        <h3>
            <i class="fas fa-calendar-plus"></i> <span id="modalTitle">Nouvel Evenement</span>
        </h3>

        <form id="eventForm" method='POST' action="/add-event-planning">
            <div class="row h-100">
                <!-- PARTIE GAUCHE DE LA MODAL -->
                <div class="col-md-6 modal-left-section">
                    <h5 class="section-title">
                        <i class="fas fa-user"></i> Informations Client & Salarié
                    </h5>
                    
                    <div class="mb-3">
                        <label for="client_id" class="form-label">Client.e:</label>
                        <select name="client_id" id="client_id" class="form-select" required>
                            <option value="">-- Sélectionner un salarié --</option>
                            <% if (clients && clients.length > 0) { %>
                                <% clients.forEach(clients => { %>
                                    <option value="<%= clients.id_employee %>">
                                        <%= clients.f_name %> <%= clients.l_name %>
                                    </option>
                                <% }); %>
                            <% } else { %>
                                <option value="" disabled>Aucun Clients disponible</option>
                            <% } %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="employee_id" class="form-label">Salarié.e:</label>
                        <select name="employee_id" id="employee_id" class="form-select" required>
                            <option value="">-- Sélectionner un salarié --</option>
                            <% if (employees && employees.length > 0) { %>
                                <% employees.forEach(employee => { %>
                                    <option value="<%= employee.id_employee %>">
                                        <%= employee.fname %> <%= employee.lname %>
                                    </option>
                                <% }); %>
                            <% } else { %>
                                <option value="" disabled>Aucun salarié disponible</option>
                            <% } %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="prestation_id" class="form-label">Prestation:</label>
                        <select name="prestation_id" id="prestation_id" class="form-select">
                            <option value="">-- Sélectionner une prestation --</option>
                        </select>
                    </div>
                </div>

                <!-- SÉPARATEUR VERTICAL -->
                <div class="modal-separator"></div>

                <!-- PARTIE DROITE DE LA MODAL -->
                <div class="col-md-6 modal-right-section">
                    <h5 class="section-title">
                        <i class="fas fa-clock"></i> Planning & Détails
                    </h5>
                    
                    <div class="mb-3">
                        <label for="start_date" class="form-label">Date de début:</label>
                        <input type="date" class="form-control" id="start_date" name="start_date" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="start_time" class="form-label">Heure de début:</label>
                        <input type="time" class="form-control" id="start_time" name="start_time" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="end_date" class="form-label">Date de fin:</label>
                        <input type="date" class="form-control" id="end_date" name="end_date" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="end_time" class="form-label">Heure de fin:</label>
                        <input type="time" class="form-control" id="end_time" name="end_time" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes:</label>
                        <textarea name="notes" id="notes" class="form-control" rows="3" placeholder="Information supplémentaire"></textarea>
                    </div>
                </div>
            </div>
            
            <!-- Boutons en bas, centrés -->
            <div class="row">
                <div class="col-12 text-center mt-3">
                    <button type="submit" id="saveEventBtn" class="btn btn-primary me-2">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <button type="button" id="cancelEventBtn" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Annuler
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- END MODAL -->

<!-- START SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.19/index.global.min.js"></script>
<script src="/JS/configCalendar.js"></script>
<!-- END SCRIPTS -->