<div class="container bg-profil d-flex ">
    <div class="container card d-lg-flex flex-lg-row justify-content-lg-center align-items-lg-center p-5
        d-sm-flex flex-sm-column justify-content-sm-center align-items-sm-center gap-5">
        <div class="col-lg-4">
            <img src="/uploads/<%= avatar %>" alt="avatar" class="employee-avatar-profil">
        </div>

        <!-- * Carte Profil -->
        <div class="card-body col-8 d-flex flex-column justify-content-between gap-5">
            <div class="d-flex flex-column justify-content-center align-items-center">

                <!-- * Nom complet -->
                <h1>
                    <strong>
                        <%= lname%>
                    </strong>
                    <strong>
                        <%= fname%>
                    </strong>
                </h1>
            </div>

            <!-- * Informations supplémentaires -->
            <div class="d-lg-flex flex-lg-row justify-content-lg-around
            d-sm-flex flex-sm-column gap-5">

                <!-- ! Column gauche -->
                <div class="d-sm-flex flex-sm-column gap-2">
                    <p><strong> POSTE - </strong>
                        <%= poste.name %>
                    </p>
                    <p><strong>EMAIL -</strong>
                        <%= email %>
                    </p>
                    <p><strong>TELEPHONE -</strong>
                        <%= phone %>
                    </p>
                </div>

                <!-- ! Column droite -->
                <div class="d-sm-flex flex-sm-column gap-2">
                    <p><strong>ADRESSE -</strong>
                        <%= street %>
                    </p>
                    <p><strong>VILLE -</strong>
                        <%= city %>
                    </p>
                    <p><strong>CODE POSTALE -</strong>
                        <%= cp %>
                    </p>
                </div>
            </div>

            <!-- * Bouton Déconnexion -->
            <div class="d-flex flex-row justify-content-center align-items-center gap-3">
                <a href="/logout" class="btn btn-danger d-flex align-items-center gap-2">
                    <i class="bi bi-box-arrow-right"></i>
                    Se déconnecter
                </a>
            </div>

        </div>
    </div>
</div>