<!-- START STYLES -->
<link rel="stylesheet" href="/CSS/ADMIN/listingEmployee.css">
<!-- END STYLES -->

<!-- START CONTENT -->
<div class="employee-listing-page">
    <!-- START HEADER  -->
    <div class="listing-header-modern">
        <div class="header-content">
            <div class="title-section">
                <div class="icon-wrapper">
                    <i class="fas fa-users"></i>
                </div>
                <div>
                    <h1 class="page-title">Gestion des employés</h1>
                    <p class="page-subtitle">Gérez votre équipe en toute simplicité</p>
                </div>
            </div>
            
            <div class="header-stats">
                <div class="stat-card">
                    <div class="stat-number"><%= employees.length %></div>
                    <div class="stat-label">Employé<%= employees.length > 1 ? 's' : '' %></div>
                </div>

                <!-- ACTION -->
                <a href="/ajout-salarie" class="add-employee-btn-modern">
                    <i class="fas fa-user-plus"></i>
                    <span>Ajouter</span>
                </a>
            </div>
        </div>
        
    </div>
    <!-- END HEADER -->

    <!-- START MESSAGES-->
        <!-- ! DÉSACTIVATION -->
    <% if (typeof query !== 'undefined' && query.message === 'désactivé') { %>
    <div class="notification-modern success">
        <div class="notification-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="notification-content">
            <h4>Employé désactivé</h4>
            <p>Le compte de <strong><%= query.name %></strong> a été désactivé avec succès.</p>
        </div>
        <button class="notification-close" onclick="this.parentElement.style.display='none'">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <% } %>

        <!-- ! AJOUT -->
    <% if (typeof query !== 'undefined' && query.message === 'ajouté') { %>
    <div class="notification-modern success">
        <div class="notification-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="notification-content">
            <h4>Employé ajouté</h4>
            <p>Le compte de <strong><%= query.name %></strong> a été ajouté avec succès.</p>
        </div>
        <button class="notification-close" onclick="this.parentElement.style.display='none'">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <% } %>
    <!-- END MESSAGES-->

    <!-- START GRILLE-->
    <div class="employees-grid-container">
        <div class="employees-grid-modern">
            <% employees.forEach((emp, index) => { %>
            <div class="employee-card-modern">
                <div class="card-background"></div>
                
                <div class="employee-avatar-section">
                    <div class="avatar-wrapper">
                        <img src="/uploads/<%= emp.avatar %>" alt="avatar" class="employee-avatar-modern">
                        <div class="status-indicator <%= emp.isActive ? 'active' : 'inactive' %>"></div>
                    </div>
                </div>
                
                <div class="employee-info">
                    <h3 class="employee-name-modern">
                        <%= emp.fname %> <%= emp.lname %>
                    </h3>
                    <p class="employee-position">
                        <i class="fas fa-briefcase"></i>
                        <%= emp.Poste ? emp.Poste.name : 'Non défini' %>
                    </p>
                    <p class="employee-email">
                        <i class="fas fa-envelope"></i>
                        <%= emp.email %>
                    </p>
                </div>
                
                <div class="card-actions">
                    <a href="/voir-plus/<%= emp.id_employee %>" class="view-details-btn-modern">
                        <i class="fas fa-eye"></i>
                        <span>Voir détails</span>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
        
    </div>
    <!-- END GRILLE-->
</div>
<!-- END CONTENT -->